{
  "name": "gazet",
  "description": "Gazet Ghost Theme",
  "version": "1.2.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "type": "module",
  "author": {
    "name": "Bright Themes",
    "email": "hi@brightthemes.com",
    "url": "https://brightthemes.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Blog"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brightthemes/gazet.git"
  },
  "scripts": {
    "dev": "vite build --watch & vite",
    "serve": "vite",
    "watch": "vite build --watch",
    "prebuild": "test -f theme.js && node theme.js || true",
    "build": "vite build",
    "preview": "vite preview",
    "test": "gscan . --verbose",
    "zip": "npm run build && npm run test && mkdir -p dist && zip -r dist/${npm_package_name} . -x 'dist*' 'demo*' 'node_modules*' '.*' 'TODO.md' 'private.hbs' 'theme.js'",
    "release": "npm version minor --no-git-tag-version && npm run zip && git add . && git commit -m \"v$(node -p 'require(\"./package.json\").version')\" && git push"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "@tryghost/content-api": "^1.12.0",
    "@vitejs/plugin-legacy": "^5.4.3",
    "alpinejs": "^3.15.0",
    "fitvids": "^2.1.1",
    "gscan": "^5.1.0",
    "swiper": "^11.2.10",
    "tailwindcss": "^4.0.0",
    "tocbot": "^4.36.4",
    "vite": "^5.4.20"
  },
  "config": {
    "card_assets": true,
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 320
      },
      "m": {
        "width": 640
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1280
      },
      "xxl": {
        "width": 2000
      }
    },
    "custom": {
      "background_color": {
        "type": "color",
        "default": "#ffffff",
        "description": "Set the main background color"
      },
      "text_color": {
        "type": "color",
        "default": "#0d0d0d",
        "description": "Set the main text color"
      },
      "border_color": {
        "type": "color",
        "default": "#0d0d0d",
        "description": "Set the border color"
      },
      "headings_font_weight": {
        "type": "select",
        "options": [
          "normal",
          "medium",
          "semibold",
          "bold"
        ],
        "default": "medium",
        "description": "Set the font weight for headings"
      },
      "header_logo_position": {
        "type": "select",
        "options": [
          "left",
          "center"
        ],
        "default": "left",
        "description": "Set the position of the logo in the main header"
      },
      "use_portal_links": {
        "type": "boolean",
        "default": true,
        "description": "Use Ghost Portal for the sign in and sign up flow"
      },
      "subscribe_cta_headline": {
        "type": "text",
        "description": "Set the headline for the subscribe CTA (sidebar)"
      },
      "subscribe_cta_subheading": {
        "type": "text",
        "description": "Set the subheading for the subscribe CTA (sidebar)"
      },
      "post_card_comment_count": {
        "type": "boolean",
        "default": false,
        "description": "Show the comment count on post cards (when there's at least one comment)"
      },
      "hero_posts_layout": {
        "type": "select",
        "options": [
          "dynamic",
          "1-post",
          "2-posts",
          "3-posts",
          "4-posts",
          "5-posts",
          "6-posts"
        ],
        "default": "dynamic",
        "description": "Set the maximum number of posts to be shown in the hero section",
        "group": "homepage"
      },
      "hero_posts_filter": {
        "type": "select",
        "options": [
          "featured",
          "latest"
        ],
        "default": "featured",
        "description": "Set how the posts are sourced for the hero section",
        "group": "homepage"
      },
      "members_posts_filter": {
        "type": "select",
        "options": [
          "all-members",
          "free-members-only",
          "paid-members-only",
          "none"
        ],
        "default": "all-members",
        "description": "Filter which membership-restricted posts appear in this section",
        "group": "homepage"
      },
      "topic_section_layout": {
        "type": "select",
        "options": [
          "grid-with-5-posts",
          "grid-with-8-posts",
          "description-and-5-posts",
          "column-with-5-posts"
        ],
        "default": "grid-with-5-posts",
        "description": "Set the layout for the topic sections",
        "group": "homepage"
      },
      "show_podcasts": {
        "type": "boolean",
        "default": true,
        "description": "Show the podcasts section on the homepage (from /podcasts/ page)",
        "group": "homepage"
      },
      "show_writers": {
        "type": "boolean",
        "default": true,
        "description": "Show the writers section on the homepage (from /writers/ page)",
        "group": "homepage"
      },
      "show_newsletters": {
        "type": "boolean",
        "default": true,
        "description": "Show the newsletters section on homepage (Admin > Settings > Newsletters). Requires writers enabled.",
        "group": "homepage"
      },
      "show_events": {
        "type": "boolean",
        "default": true,
        "description": "Show the events section on the homepage (posts tagged 'event')",
        "group": "homepage"
      },
      "default_post_layout": {
        "type": "select",
        "options": [
          "with-regular-image",
          "with-wide-image",
          "with-fullwidth-image",
          "with-no-image",
          "with-sidebar"
        ],
        "default": "with-regular-image",
        "description": "Set the default layout for posts",
        "group": "post"
      },
      "post_title_alignment": {
        "type": "select",
        "options": [
          "left",
          "center"
        ],
        "default": "left",
        "description": "Set the alignment of the post title and excerpt",
        "group": "post"
      },
      "enable_dropcaps": {
        "type": "boolean",
        "default": true,
        "description": "Enable the dropcap for the first letter of the first paragraph",
        "group": "post"
      }
    }
  }
}
